<?xml version="1.0" encoding="utf-8"?>
<com.frm.safe_pin_pad_library.ForegroundRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:focusable="true">

    <ImageView
            android:id="@+id/safe_pin_button_texture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:padding="10dp"
            android:alpha="0.4"
    />

    <ImageView
            android:id="@+id/safe_pin_button_figure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_centerInParent="true"
    />

    <TextView
            android:id="@+id/safe_digit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:textAllCaps="true"
            android:layout_centerInParent="true"
            tools:text="1"
            tools:textSize="18sp"
            tools:visibility="visible"/>

    <TextView
            android:id="@+id/safe_word_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:visibility="gone"
            android:textAllCaps="true"
            android:layout_centerInParent="true"
            android:layout_below="@id/safe_digit_text"
            tools:text="ABC"
            tools:textSize="12sp"
            tools:visibility="visible"/>

</com.frm.safe_pin_pad_library.ForegroundRelativeLayout>